extends layout

block content
    .container-fluid
        .row
            .col-lg-3
            .col-lg-3
            .col-lg-6
        .row
            .col-lg-2
                button(class='add-row' style='width:40px') +
                br
                button(class='remove-row' style='width:40px') -
            .col-lg-8
                form(class='sales-order-form')
                    table(class="table" id="sales-order-table")
                        thead
                            tr
                                th Item Name
                                th Unit Price
                                th Quantity
                                th Free Quantity
                                th Sub Total
                        tbody
                            tr
                                td
                                    select(name='itemName' class='form-control' style='width: 250px;')
                                        option
                                        option Option1
                                        option Option2
                                        option Option3
                                td
                                    input(name='unitPrice' type='text' readonly='readonly' value='50' class='form-control')
                                td
                                    input(name='quantity' type='number' value='6' class='form-control')
                                td
                                    input(name='freeQuantity' type='number' value='1' class='form-control')
                                td
                                    input(name='subTotal' type='text' readonly='readonly' value='300' class='form-control')
                    input(type='submit' value='Submit' class='form-control')
            .col-lg-2
        .row
            .col-lg-2
            .col-lg-8
            .col-lg-2
                button(value='Submit' class='form-control btn primary sale-save')